<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-9 col-lg-6 mx-auto text-light">
      <!--投稿一覧画面へ戻るリンク-->
      <div class="pt-3 pt-sm-4 pb-3 pb-sm-4 sticky-top nav4">
        <%= link_to new_review_path(sort: "created_at desc"), class: "text-info text-decoration-none", data: {"turbolinks"=>false} do %>
          <i class="mb-0 me-4 fa-solid fa-arrow-left h4 d-inline"></i>
          <h5 class="text-info d-inline">レビュー一覧</h5>
        <% end %>
      </div>
      
      <!--レビューが0件の時-->
      <% if @reviews.count == 0 %>
        <h5 class="mt-4 text-center">レビューがありません</h5>
        
      <!--レビューが1件以上の時-->
      <% else %>
        <!--レビュー一覧表示-->
        <%= render "public/reviews/index", reviews: @reviews, view: "reviews" %>
      <% end %>
    </div>
  </div>
</div>

<!--画面下部メニューバー-->
<%= render "layouts/bottom_navbar", bottom_nav: "review" %>