<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-5 mx-auto text-light">
      <h2 class="mt-5 mb-4 px-3 border-start border-5 border-warning">プロフィール編集</h2>
      
      <%= form_with model: @user, url: profile_update_path, method: :patch do |f| %>
        <div class="mb-5">
          <%= f.label :profile_image, class: "form-label" %><br>
          <%= image_tag @user.get_profile_image(70,70) %>
          <%= f.file_field :profile_image, class: "mt-2 form-control", accept: "image/*" %>
        </div>
        
        <div class="mb-5">
          <%= f.label :user_name, class: "form-label" %>
          <%= f.text_field :user_name, class: "mt-2 form-control" %>
        </div>
        
        <div class="text-center">
          <%= f.submit "更新する", class: "col-6 btn btn-outline-warning rounded-pill border-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>