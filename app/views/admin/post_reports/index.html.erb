<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto mt-2 pt-4 text-light">
      <%= render "top_navbar" %>
      
      <table class="table table-striped table-hover">
        <thead class="table-primary">
          <tr>
            <th class="col-2">通報ID</th>
            <th class="col-2">投稿ID</th>
            <th class="col-6">通報理由</th>
            <th class="col-2 text-center">ステータス</th>
          </tr>
        </thead>
        <tbody class="table-light table-group-divider">
          <% @reports.each do |report| %>
            <tr>
              <td><%= report.id %></td>
              <td>
                <%= link_to admin_post_report_post_path(report, report.post) do %>
                  <%= report.post_id %>
                <% end %>
              </td>
              <td><%= report.reason %></td>
              <td class="text-center">
                <!--対応状況により、表示する文字の色を変更-->
                <% if report.status == "wait_response" %>
                  <span class="text-danger">
                    <%= report.status_i18n %>
                  </span>
                <% elsif report.status == "responded" %>
                  <span class="text-secondary">
                    <%= report.status_i18n %>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <!--ページネーション-->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @reports %>
      </div>
    </div>
  </div>
</div>