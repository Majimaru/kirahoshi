<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto pt-5 text-light">
      <h2 class="mb-4 px-3 border-start border-5 border-warning">会員一覧</h2>
      
      <table class="table table-striped table-hover">
        <thead class="table-primary">
          <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody class="table-light table-group-divider">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.user_name %></td>
              <td><%= user.email %></td>
              <td><%= user.membership_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <!--ページネーション-->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>