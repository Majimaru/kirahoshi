<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto mt-2 pt-4 text-light">
      <h3 class="mb-4 px-3 border-start border-5 border-warning">ユーザー一覧</h3>
      
      <table class="table table-striped table-hover">
        <thead class="table-primary">
          <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th class="text-center">ステータス</th>
          </tr>
        </thead>
        <tbody class="table-light table-group-divider">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.user_name %></td>
              <td><%= user.email %></td>
              <td class="text-center">
                <!--入会状況により、表示する文字の色を変更-->
                <% if user.membership_status == "admission" %>
                  <span class="text-success">
                    <%= user.membership_status_i18n %>
                  </span>
                <% else %>
                  <span class="text-danger">
                    <%= user.membership_status_i18n %>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <!--ページネーション-->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>