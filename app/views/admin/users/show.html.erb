<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto mt-2 pt-4 text-light">
      <h3 class="mb-4 pb-1 px-3 border-start border-5 border-warning">ユーザー詳細</h3>
      
      <table class="table table-borderless admin-table">
        <tr>
          <td class="col-4 admin-td text-danger">ユーザー名</td>
          <td class="col-8 admin-td"><%= @user.user_name %></td>
        </tr>
        <tr>
          <td class="admin-td">メールアドレス</td>
          <td class="admin-td"><%= @user.email %></td>
        </tr>
        <tr>
          <td class="admin-td">投稿通報回数</td>
          <td class="admin-td"><%= @user.post_reports.count %>回</td>
        </tr>
        <tr>
          <td class="admin-td">レビュー通報回数</td>
          <td class="admin-td"><%= @user.review_reports.count %>回</td>
        </tr>
        <tr>
          <td class="admin-td">会員ステータス</td>
          <td class="admin-td">
            
          </td>
        </tr>
      </table>
      
      <div class="row mt-5">
        <!--通報ステータスが未対応の場合のみ「問題なし」ボタンを表示する-->
        <% if @report.status == "wait_response" %>
          <%= link_to "問題なし", :back, 
            class: "col-3 me-4 btn btn-success rounded-pill", :data => {:confirm => '通報ステータスを「対応済み」にしてもよろしいですか？'} %>
        <% end %>
        
        <%= link_to "削除する", :back,
          class: "col-3 btn btn-outline-danger rounded-pill border-3", :data => {:confirm => '削除してもよろしいですか？'} %>
      </div>
    </div>
  </div>
</div>

<!--画面下部メニューバー-->
<%= render "layouts/bottom_navbar", bottom_nav: "admin_user" %>