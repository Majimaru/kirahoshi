<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto mt-2 pt-4 text-light">
      <h3 class="mb-4 pb-2">
        <%= link_to admin_master_tables_path, class: "link-warning text-decoration-none h2", data: {"turbolinks"=>false} do %>
          <i class="me-3 fa-solid fa-arrow-left"></i>
        <% end %>
        ジャンルテーブル
      </h3>
      
      <div class="row">
        <div class="col-4">
          <h4 class="mb-4">新規登録</h4>
          
          <!--ジャンル追加フォーム-->
          <%= form_with url: admin_genres_path, model: @genre_new do |f| %>
            <div class="field">
              <%= f.label "ジャンル名" %><br>
              <%= f.text_field :name, class: "col-12 mt-2 mb-4", maxlength: 15, required: true %>
            </div>
            
            <div class="actions">
              <%= f.submit "登録する", class: "col-12 mt-4 btn btn-outline-warning rounded-pill border-3" %>
            </div>
          <% end %>
        </div>
        
        <div class="offset-1 col-7">
          <h4 class="mb-4">一覧 (<%= Genre.count %>)</h4>
          
          <table class="table table-striped table-hover">
            <thead class="table-primary">
              <tr>
                <th class="col-3">ID</th>
                <th>ジャンル名</th>
              </tr>
            </thead>
            <tbody class="table-light table-group-divider">
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.id %></td>
                  <td><%= genre.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
          <!--ページネーション-->
          <div class="mt-5 d-flex justify-content-center">
            <%= paginate @genres %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--画面下部メニューバー-->
<%= render "layouts/bottom_navbar", bottom_nav: "maintenance" %>